{
  "name": "Set",
  "description": "Set a value in an Object or Array based on a specified path.",
  "arguments": [
    {
      "name": "Object",
      "formula": { "type": "value", "value": null },
      "description": "The input Object.",
      "type": { "type": "Object" }
    },
    {
      "name": "Path",
      "formula": { "type": "value", "value": "Key" },
      "description": "The Path can be either a Number, a String or an Array of Strings.",
      "type": {
        "type": "Union",
        "types": [
          { "type": "Array" },
          { "type": "String" },
          { "type": "Number" }
        ]
      }
    },
    {
      "name": "Value",
      "formula": { "type": "value", "value": "Item" },
      "description": "The value to set.",
      "type": {
        "type": "Any"
      }
    }
  ],
  "output": {
    "description": "The input Object with the new field.",
    "type": { "type": "Object" }
  }
}
