{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "strictBuiltinIteratorReturn": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
